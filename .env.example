# PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_postgres_password
DB_NAME=points_db

# MongoDB
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/points_db

# Entorno
NODE_ENV=development
PORT=3000

# JWT
JWT_SECRET=your_jwt_secret
JWT_EXPIRES_IN=1d

# Cloud Function
CLOUD_FUNCTION_URL=https://REGION-PROJECT.cloudfunctions.net/registerPoints

# Google Cloud / BigQuery
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=./credentials/service-account-key.json
BIGQUERY_DATASET_ID=points_system
BIGQUERY_TABLE_ID=points_transactions

# (Opcional) Configuración para la función en cloud-functions/register-points
BIGQUERY_DATASET=points_system
BIGQUERY_TABLE=points_transactions